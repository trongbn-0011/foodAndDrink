<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<bean id="ProductService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.ProductServiceImpl">
				<property name="productDAO" ref="ProductDAO" />
			</bean>
		</property>
	</bean>
	<bean id="UserService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.UserServiceImpl">
				<property name="userDAO" ref="UserDAO" />
			</bean>
		</property>
	</bean>
	<bean id="CategoryService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.CategoryServiceImpl">
				<property name="categoryDAO" ref="CategoryDAO" />
			</bean>
		</property>
	</bean>
	<bean id="OrderService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.OrderServiceImpl">
				<property name="orderDAO" ref="OrderDAO" />
			</bean>
		</property>
	</bean>
	<bean id="OrderProductService" parent="baseTransactionProxy">
		<property name="target">
			<bean class="app.service.impl.OrderProductServiceImpl">
				<property name="orderProductDAO" ref="OrderProductDAO" />
				<property name="productDAO" ref="ProductDAO" />
			</bean>
		</property>
	</bean>
	
</beans>
